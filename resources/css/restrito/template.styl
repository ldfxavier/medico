footer
    height: 500px
    position: relative
    overflow: hidden
    .banner_footer
        width: 100%
        height: 100%
        max-height: 500px
        display: flex
        align-items: center
        justify-content: center
        background-size: cover
        background-position: cover
        background-repeat: no-repeat
        box-shadow: inset 0 -8px 30px rgba(0, 0, 0, 0.2)
        position: relative
        overflow: hidden 
    .conteudo
        width: 100%
        height: 100%
        display: flex
        align-items: center
        justify-content: center
        flex-direction: column
        position: relative
        background-color: rgba(0, 0, 0, 0.7)
        overflow: hidden
        padding: 0px 20px
        .centro
            width: 100%
            max-width: 1000px
            display: flex
            align-items: flex-start
            justify-content: flex-start
            flex-direction: column
            margin-top: -30px
            .topo
                width: 100%
                display: flex
                align-items: center
                justify-content: space-between
                border-bottom: 1px solid #FFF
                padding-bottom: 20px
                margin-bottom: 20px
                .contratar
                    padding: 10px 20px
                    border-radius: 3px
                    font-size: 1.5em
                    line-height: 1.5em
                    color: #FFF
                    background-color: #003366
            .informacao
                width: 100%
                display: flex
                align-items: center
                justify-content: flex-end
                margin-bottom: 20px
                ul 
                    border-right: 2px solid #FFEB07
                    padding-right: 10px
                    li
                        text-align: right
                        color: #fff
                        font-size: 1.5em
                        line-height: 1.5em
                        &.bold
                            font-weight: bold
                        &.email
                            margin-top: 20px
        .copyright
            width: 100%
            display: flex
            align-items: center
            justify-content: center
            text-align: right
            padding-bottom: 20px
            position: absolute
            bottom: 0
            .centro
                display: flex
                align-items: flex-end
                justify-content: flex-end
            p
                font-size: 1.2em
                line-height: 1.5em
                color: #fff

@media screen and (max-width: 1000px)
    footer .conteudo .copyright .centro
        padding: 0 20px

@media screen and (max-width: 450px)
    footer .conteudo .centro .topo
        flex-direction: column
        justify-content: flex-start
        align-items: flex-start
        .contratar
            margin-top: 20px