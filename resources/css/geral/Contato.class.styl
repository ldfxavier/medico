#bloco_fw-contato-novo
	width: calc(100% - 40px)
	max-width: 700px
	position: relative
	margin: 20px 0
	background: #FFF
	display: flex
	flex-direction: row
	header
		width 100%
		height: 50px
		line-height: 50px
		position: absolute
		padding-left: 300px
		background-color: #FFF
		z-index: 2
		display: flex
		flex-direction: row
	header h1
		font-size 1.8em
		color: #666
		flex-grow: 1
	header i
		width 50px
		height: 50px
		text-align: center
		cursor: pointer
		&.fechar
			font-size 1.4em
			color: #666
		&.ok
			font-size 1.8em
			color: $cor_add
#bloco_fw-contato-novo figure
	width: 300px
	height: 350px
	position: relative
	background-size: cover
	background-position: center center
	background-repeat: no-repeat
	background-color: #029688
	background-image: url(../images/usuario_padrao.png)
	z-index 3
	&:hover .upload
		opacity: 1
	.upload
		width 60px
		height 60px
		line-height 60px
		text-align: center
		position: absolute
		bottom 20px
		right 20px
		background: #FFF
		border-radius: 50%
		opacity: .5
		transition: opacity .3s ease-out
		cursor: pointer
		overflow: hidden
	.upload i
		position: relative
		z-index: 1
		font-size: 2.2em
		color: #666
	.upload input
		width 100%
		height 100%
		position: absolute
		top 0
		left 0
		opacity: 0
		z-index 2
#bloco_fw-contato-novo fieldset
	width calc(100% - 300px)
	padding: 50px 20px 20px 20px
	display: flex
	flex-direction: column
	label
		width 100%
		font-size 1.4em
	input
		height 30px
		border-bottom: 1px solid #CCC
		font-size 1.4em
		padding-top 8px
		margin-top: 3px
		&:focus
			border-color: $azul3
	textarea
		border-bottom: 1px solid #CCC
		margin-top: 3px
		&:focus
			border-color: $azul3
	select
		border-bottom: 1px solid #CCC
		font-size 1.4em
		padding-top 8px
		margin-top: 3px
	.bloco_nome
		width calc(100% - 60px)
		height 45px
		margin: 0 30px 20px 30px
		position: relative
		display: flex
	.bloco_nome label
		margin-top: 18px
		font-size: 2em
		color: #CCC
		transition: margin-top .3s ease-out, font-size .3s ease-out, color .3s ease-out
	.bloco_nome.ativo label
		margin-top: 0
		color: #999
		font-size: 1em
	.bloco_nome input
		width 100%
		height 35px
		position: absolute
		bottom: 0
		left: 0
		font-size 1.8em
	.bloco_input
		display: flex
		flex-direction: row
	.bloco_input > i
		width 30px
		padding-top 16px
		font-size 1.4em
	.bloco_input .lista
		width calc(100% - 30px)
		display: flex
		flex-direction: column
		margin-bottom 20px
	.bloco_input .lista .bloco
		width: 100%
		display: flex
		flex-direction: row
		flex-wrap: wrap
	.bloco_input .lista .bloco input
		width: calc(100% - 130px)
	.bloco_input .lista .bloco select
		width 80px
		margin-right 20px
	.bloco_input .lista .bloco i
		width 30px
		height 25px
		line-height 25px
		color: #999
		margin-top 8px
		text-align: center
		cursor: pointer
		display: none
		&:hover
			color: #666
	.botao_mais
		margin-top 20px
		color: $azul4
		font-size 1.4em
	.bloco_mais
		display: none
		flex-direction: column
	.bloco_mais .bloco_input .lista .bloco input
		width calc(100% - 30px)
	.bloco_mais .bloco_input .lista .bloco input[name=cep]
		width 80px
	.bloco_mais .bloco_input .lista .bloco input[name=cidade]
		width calc(100% - 180px)
		margin-left 10px
		margin-right 10px
	.bloco_mais .bloco_input .lista .bloco select[name=estado]
		width 50px
	.bloco_mais .bloco_input .lista .bloco textarea
		width calc(100% - 30px)
		height 1.5em
		margin-top 15px
	.bloco_mais .bloco_input .lista a.botao_geolocalizacao
		width 110px
		height 20px
		position: relative
		margin-top 10px
		display: none
		flex-direction: row
		cursor: pointer
		overflow: hidden
	.bloco_mais .bloco_input .lista a.botao_geolocalizacao i
		width 20px
		height 20px
		line-height 20px
		background-color: $cor_editar
		text-align: center
		font-size 1.2em
		color: #FFF
		border-radius: 50%
		z-index 2
	.bloco_mais .bloco_input .lista a.botao_geolocalizacao p
		height: 20px
		line-height: 20px
		position: relative
		font-size 1.4em
		opacity: 0
		margin-left -200px
		color: #999
		transition: opacity .3s ease-out, margin-left .3s ease-out
		z-index 1
	.bloco_mais .bloco_input .lista a.botao_geolocalizacao:hover p
		opacity: 1
		margin-left: 5px
@media screen and (max-width:900px)
	#bloco_fw-contato-novo
		width: 100%
		max-width: 100%
		height: 100vh
		margin: 0
	#bloco_fw-contato-novo figure
		width: 300px
		height: 100vh
	#bloco_fw-contato-novo fieldset
		height calc(100vh - 50px)
		padding-top 0
		margin-top 50px
		overflow-x: hidden
		overflow-y: auto
@media screen and (max-width:620px)
	#bloco_fw-contato-novo
		height: auto
		min-height: 100vh
		flex-direction: column
		overflow-x: hidden
		overflow-y: auto
		header
			z-index: 3
			padding-left 0
			position: fixed
	#bloco_fw-contato-novo figure
		width 100%
		height 250px
		position: fixed
		z-index: 1
		margin-top 50px
	#bloco_fw-contato-novo fieldset
		width 100%
		height: auto
		margin-top 300px
		padding-top: 20px
		overflow: hidden
		background-color: #FFF
		z-index: 2