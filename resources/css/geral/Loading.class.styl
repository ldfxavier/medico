#fw_loading
	width: 100%
	height: 100%
	position: fixed
	top: 0
	left: 0
	z-index: 1998
	background-color: rgba(255,255,255,.9)
	display: flex
	flex-direction: column
	justify-content: center
	align-items: center
	i
		border-radius: 50%
		animation: fw_loading_bola 1.1s linear 0s infinite
	p
		position: absolute
		margin-top: 30px
		font-size: 1.2em

@keyframes fw_loading_bola
	0%
		width: 10px
		height: 10px
		border: 3px solid $loading
		background-color: $loading
		opacity: 1
	40%
		background-color: $loading
		opacity: 1
	60%
		background-color: rgba(255,255,255,0)
		border: 6px solid $loading
	100%
		width: 40px
		height: 40px
		border: 1px solid $loading
		opacity: 0
