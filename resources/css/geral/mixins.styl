col(n = 2, m = 20px)
    width: s('calc( ( 100% / %s ) - %s )', n, m)
    margin-left: s('calc( %s / 2 )', m)
    margin-right: s('calc( %s / 2 )', m)

icone(local = site, cache = 24804973)
    @font-face {
        font-family: local;
        src: url('../files/fonts/' + local + '/icone.eot?' + cache);
        src: url('../files/fonts/' + local + '/icone.eot?' + cache + '#iefix') format('embedded-opentype'),
			url('../files/fonts/' + local + '/icone.woff?' + cache) format('woff'),
			url('../files/fonts/' + local + '/icone.ttf?' + cache) format('truetype'),
			url('../files/fonts/' + local + '/icone.svg?' + cache + '#icone') format('svg');
        font-weight: normal;
        font-style: normal;
    }

/* MASCARA */
fixed-mascara(zindex = 9999912)
    width: 100%
    height: 100vh
    position fixed
    top 0
    left 0
    background-color rgba(0,0,0,.7)
    z-index zindex
    display none
    flex-direction column
    align-items center
    overflow-x hidden
    overflow-y auto

fixed-conteudo(width = 1000px)
    width calc(100% - 40px) !important
    max-width width
    margin: 20px 0


/* GRADIENTE */
gradient(c1, c2, de = to, pa = top)
    background: linear-gradient(de pa, c1, c2)

/* ESCONDER */
esconder()
    width 1px
    height 1px
    position absolute
    top -99999px
    left -99999px
    opacity 0

/* BACKGROUND SIZE */
bg-size()
    background-repeat no-repeat
    background-position center center
    background-size: cover

/* BACKGROUND IMAGEM */
bg-image(im)
    background-image: url(../images/im);

// BOX-SHADOW
box-shadow__padrao()
    box-shadow: 0 0 5px #CCC

box-shadow__padrao--suave()
    box-shadow: 0 2px 4px #EEE

box-shadow__bottom()
    box-shadow: inset 0px -10px 8px -10px #CCC

// BORDAS
borda-padrao()
    border: 1px solid #E8E8E8
    border-radius: 3px

border-radius__padrao()
    border-radius: 3px

borda-padrao__bottom()
    border-bottom: 1px solid #E8E8E8


// SETAS PARA O SELECT
seta-borda__esquerdo()
	background-image: 
    linear-gradient(45deg, transparent 50%, gray 50%), 
    linear-gradient(135deg, gray 50%, transparent 50%), 
    linear-gradient(to right, #ccc, #ccc)
	background-position: 
    calc(100% - 20px) calc(1em + 2px), 
    calc(100% - 15px) calc(1em + 2px), 
    calc(100% - 2.5em) 0.5em
	background-size: 
    5px 5px, 
    5px 5px, 
    1px 1.5em
	background-repeat: no-repeat

seta-background()
	background-image: linear-gradient(45deg, transparent 50%, #666 50%), linear-gradient(135deg, #666 50%, transparent 50%), linear-gradient(to right, rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1))
	background-position: calc(100% - 20px) calc(1em + 2px),calc(100% - 15px) calc(1em + 2px),100% 0
	background-size: 5px 5px,5px 5px,2.5em 2.5em
	background-repeat: no-repeat