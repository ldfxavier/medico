#fw_pagina
	width: 100%
	height: 100%
	position: fixed
	top: 0
	left: 0
	background-color: rgba(0,0,0,.7)
	z-index: 1990
	overflow-x: hidden
	overflow-y: auto
	opacity: 0
	&.fw_pagina_abrir
		animation: fw_pagina_abrir .3s ease-out
		animation-fill-mode: forwards
	&.fw_pagina_fechar
		animation: fw_pagina_fechar .3s ease-out
		animation-fill-mode: forwards
	.fw_pagina_conteudo
		width 100%
		display flex
		flex-direction: column
		justify-content: center
		align-items: center
		opacity: 0
		&.fw_pagina_conteudo_abrir
			animation: fw_pagina_conteudo_abrir_mobile .5s ease-out forwards, fw_pagina_conteudo_abrir .5s ease-out forwards
		&.fw_pagina_conteudo_fechar
			animation: fw_pagina_conteudo_fechar .5s ease-out forwards
@keyframes fw_pagina_abrir
	0%
		opacity: 0
	100%
		opacity: 1
@keyframes fw_pagina_fechar
	0%
		opacity: 1
	100%
		opacity: 0
@keyframes fw_pagina_conteudo_abrir
	0%
		opacity: 0
		margin-top: -400px
		margin-left 0
	100%
		opacity: 1
		margin-top: 0
		margin-left 0
@keyframes fw_pagina_conteudo_fechar
	0%
		opacity: 1
		margin-top: 0
	100%
		opacity: 0
		margin-top: -400px
@keyframes fw_pagina_conteudo_abrir_mobile
	0%
		opacity: 0
		margin-left: -100vw
		margin-top 0
	100%
		opacity: 1
		margin-left: 0
		margin-top 0
@keyframes fw_pagina_conteudo_fechar_mobile
	0%
		opacity: 1
		margin-left: 0
	100%
		opacity: 0
		margin-left: -100vw
@media screen and (max-width:900px)
	#fw_pagina
		background-color: rgba(0,0,0,.7)
	#fw_pagina .fw_pagina_conteudo
		&.fw_pagina_conteudo_abrir
			animation: fw_pagina_conteudo_abrir .5s ease-out forwards, fw_pagina_conteudo_abrir_mobile .5s ease-out forwards
		&.fw_pagina_conteudo_fechar
			animation: fw_pagina_conteudo_fechar_mobile .5s ease-out forwards
