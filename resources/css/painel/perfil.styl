#bloco__perfil--index
	width: calc(100% - 40px)
	max-width: 1000px
	display: flex
	padding: 20px 0
	flex-direction: row
	align-items: flex-start
	justify-content: space-between
#bloco__perfil--index article
	width: 500px
	background-color: #FFF
	border-radius: 3px
	box-shadow: 0 0 5px rgba(0,0,0,.1)
	padding-bottom: 40px
	header
		display: flex
		align-items: center
		flex-direction: column
		border-bottom: 1px solid #EEE
		padding: 40px 0
	header figure
		width: 120px
		height: 120px
		border-radius: 50%
		background-position: center center
		background-size: cover
	header h1
		font-size: 1.6em
		font-weight: bold
		color: #333
		margin: 10px 0 5px 0
	header p
		font-size: 1.2em
		color: #666
	header a
		margin-top: 10px
		color: $cor_editar
		border: 1px solid $cor_editar
		border-radius: 3px
		padding: 5px
	header a span
		font-weight: bold
	h2
		font-size: 1.4em
		font-weight: bold
		margin-top: 40px
		padding: 0 20px
	ul.contato li
		margin-top: 10px
		padding: 0 20px
		display: flex
		align-items: center
		flex-direction: row
		flex-wrap: wrap
	ul.contato li i.icone
		width: 30px
		height: 30px
		line-height: 30px
		color: #999
		font-size: 1.2em
	ul.contato li p
		width: calc(100% - 30px)
		height: 30px
		line-height: 30px
		font-size: 1.4em
		color: #333
	ul.contato li span
		width: 100%
		font-size: 1.1em
		color: #777
		padding-left: 30px
	ul.contato li.copiar input
		width: 1px
		height: 1px
		overflow: hidden
		opacity: 0
	ul.contato li.copiar p
		width: auto
		max-width: calc(100% - 51px)
		margin-right: 7px
		background-color: #F00s

#bloco__perfil--index .historico
	width: calc(100% - 540px)
	display: flex
	flex-direction: column
	background-color: #FFF
	border-radius: 3px
	box-shadow: 0 0 5px rgba(0,0,0,.1)
	h1
		font-size: 1.4em
		font-weight: bold
		margin-top: 20px
		padding: 0 20px
	ul
		width: calc(100% - 40px)
		border-left: 2px solid #DDD
		margin: 20px
	ul li
		width: 100%
		position: relative
		display: flex
		flex-direction: row
		flex-wrap: wrap
		margin: 10px 0
		align-items: center
		cursor: default
	ul li .bola
		width: 22px
		height: 22px
		margin-left: -12px
		overflow: hidden
		background: url(../images/painel/bg_historico_circulo.png) no-repeat top center
	ul li:hover .bola
		background-position: left bottom
	ul li p
		width: calc(100% - 22px)
		line-height: 1.5em
		font-size: 1.4em
		padding-left: 10px
	ul li time
		color: #777
		padding-left: 20px
	> a
		width: 100%
		height: 30px
		line-height: 30px
		background-color: #EEE
		text-align: center
		color: #666
@media screen and (max-width:1280px)
	#bloco__perfil--index
		width: auto
		max-width: calc(100% - 40px)
		display: flex
		flex-direction: column
		justify-content: center
	#bloco__perfil--index article
		width: 100%
		max-width: 500px
		margin-bottom: 20px
	#bloco__perfil--index .historico
		width: 100%
		max-width: 500px
