form.form_geral
	width: calc(100% - 40px)
	max-width: 1000px
	margin: 20px 0
	display: flex
	flex-direction: row
	flex-wrap: wrap
	justify-content: space-between
	.coluna
		width: calc(50% - 10px)
		display: flex
		flex-direction: column
	.bloco
		width: 100%
		display: flex
		flex-direction: column
	.fieldset
		width: 100%
		background-color: #FFF
		margin-bottom: 20px
		padding-bottom: 20px
		box-shadow: 0 0 5px rgba(0,0,0,.1)
		border-radius: 4px
		display: flex
		flex-direction: column
		&.row
			flex-direction: row
		&.wrap
			flex-wrap: wrap
	.fieldset .legenda
		width: 100%
		height: 40px
		line-height: 40px
		font-size: 1.2em
		font-weight: bold
		border-bottom: 1px solid #EEE
		padding: 0 20px
		text-transform: uppercase
	label
		width: calc(100% - 40px)
		font-size: 1.2em
		margin: 20px 20px 4px 20px
		text-transform: uppercase
	input
		width: calc(100% - 40px)
		height: 40px
		padding: 0 10px
		border: 1px solid #EEE
		border-radius: 3px
		font-size: 1.4em
		background-color: #FFF
		margin-left: 20px
	input[data-type=data]
		background: url(../images/painel/calendario_padrao.png) no-repeat right center
	select
		width: calc(100% - 40px)
		height: 40px
		padding: 0 50px 0 10px
		margin-left: 20px
		background-position: right center
		background: #FFF url(../images/painel/select_padrao.png) no-repeat right center
		font-size: 1.4em
		border: 1px solid #EEE
		border-radius: 3px
	.fieldset .bloco_input
		width: 100%
		margin: 20px 0 0 20px
		flex-direction: column
		display: flex
	.fieldset .bloco_input label
	.fieldset .bloco_input input
	.fieldset .bloco_input select
		width: 100%
		margin: 0 0 4px 0
	.input_data_de_ate
		width: 100%
		max-width: 300px
		display: flex
		flex-direction: row
	.input_data_de_ate p
		height: 40px
		line-height: 40px
		margin: 0 10px
	.input_checkbox
		width: 100%
		position: relative
		display: flex
		flex-direction: row
		flex-wrap: wrap
		overflow: hidden
		&.curto
			max-height: 100px
	.input_checkbox .opcao
		col(3)
		margin: 10px 20px 0 0
		display: flex
		align-items: center
	.input_checkbox .opcao input
		display: none
	.input_checkbox .opcao label
		line-height: 1.5em
		position: relative
		cursor: pointer
		display: flex
		margin: 0
		flex-direction: row
		align-items: center
		overflow: hidden
	.input_checkbox .opcao label::before
		width: 20px
		height: 20px
		line-height: 20px
		text-align: center
		font-family: painel
		content: " "
		margin-right: 5px
		color: #FFF
		background-color: #DDD
		border-radius: 100%
	.input_checkbox .opcao input:checked + label::before
		background-color: $verde
		content: "\e819"
	.input_checkbox .opcao label span
		flex-grow: 1
		flex-basis: 0
	.input_checkbox .botao_abrir
		width: 100%
		height: 30px
		line-height: 40px
		text-align: center
		position: absolute
		left: 0
		bottom: 0
		background-image: linear-gradient(rgba(200,200,200,0), rgba(255,255,255,1))
		z-index: 2
		cursor: pointer
	.input_booleano
		display: flex
		flex-direction: row
		align-items: center
	.input_booleano p
		height: 22px
		line-height: 20px
		font-size: 1.4em
		cursor: pointer
		padding-right: 10px
	.input_booleano .botao
		width: 40px
		height: 22px
		position: relative
		display: flex
		flex-direction: row
		justify-content: flex-start
		cursor: pointer
		&::after
			width: 100%
			content: " "
			position: absolute
			top: 6px
			height: 10px
			border-radius: 5px
			background: #DDD
			z-index: 1
	.input_booleano .botao span
		width: 22px
		height: 22px
		border-radius: 50%
		background-color: #CCC
		z-index: 2
	.input_booleano.ativo .botao
		justify-content: flex-end
		&::after
			background: $cor_add
			opacity: .3
	.input_booleano.ativo .botao span
		background: $cor_add
	.obrigatorio
		border-left: 1px solid $alerta
		padding-left: 9px
	.um_ou_outro
		border-left: 1px solid $laranja3
		padding-left: 9px
	.input_tag
		width: 100%
		min-height: 40px
		border: 1px solid #EEE
		padding-left: 10px
		display: flex
		flex-direction: row
		flex-wrap: wrap
		cursor: pointer
	.input_tag .tag
		height: 26px
		line-height: 26px
		position: relative
		background-color: $azul4
		color: #FFF
		font-size: 1.2em
		font-weight: bold
		margin: 6px 10px 0 0
		padding: 0 30px 0 10px
		border-radius: 13px
		cursor: default
	.input_tag .tag i
		width: 20px
		height: 20px
		line-height: 20px
		position: absolute
		top: 3px
		right: 3px
		background-color: rgba(0,0,0,.3)
		border-radius: 10px
		cursor: pointer
	.input_tag input
		height: 40px
		line-height: 40px
		padding: 0 20px 0 0
		border: none
	.botao_salvar_flutuante
		width: 40px
		height: 40px
		position: fixed
		top: 80px
		right: 20px
		background-color: $cor_salvar
		border-radius: 20px
		overflow: hidden
		transition: width .3s ease-out
	.botao_salvar_flutuante:hover
		width: 120px
	.botao_salvar_flutuante span
		width: 80px
		height: 40px
		padding-right: 20px
		line-height: 40px
		position: absolute
		text-align: center
		font-size: 1.2em
		color: #FFF
		top: 0
		right: 0
		z-index: 1
	.botao_salvar_flutuante i
		width: 40px
		height: 40px
		line-height: 40px
		text-align: center
		color: #FFF
		font-size: 1.6em
		position: absolute
		border-radius: 50%
		top: 0
		left: 0
		background-color: $cor_salvar
		z-index: 2
		transition: left .3s ease-out
	.botao_salvar_flutuante:hover i
		left: 5px
@media screen and (max-width:1400px)
	form.form_geral
		.botao_salvar
			top: calc(100vh - 60px)
